<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:elevation="4dp"
    android:padding="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/id"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Fort Humbolt State Historic Park"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/id"
            android:id="@+id/nameMobileWeb"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Native American history and logging exhibits"
            android:textSize="15dp"
            android:layout_below="@+id/nameMobileWeb"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/id"
            android:id="@+id/descriptionMobileWeb"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>