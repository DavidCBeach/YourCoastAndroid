<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:elevation="4dp"
    android:padding="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="26dp"
            android:text="Fort Humbolt State Historic ParkFort Humbolt State Historic Park Humbolt State Historic Park"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="60dp"
            android:id="@+id/nameMobileWeb"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:text="3000mi"
            android:layout_marginRight="15dp"
            android:id="@+id/distance"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:text="Native American history and logging exhibits Native American history and logging exhibits Native American history and logging exhibits"
            android:textSize="15dp"
            android:layout_below="@+id/nameMobileWeb"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/id"
            android:id="@+id/descriptionMobileWeb"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>